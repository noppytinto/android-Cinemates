<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.resetPassword.ResetPasswordFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_resetPassword_email"
        android:layout_width="354dp"
        android:layout_height="126dp"
        android:layout_marginTop="25dp"
        android:hint="@string/login_page_email"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:helperText="@string/login_page_test_mail_address"
        app:helperTextEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_resetPassword_subTitle"
        app:startIconDrawable="@drawable/email_icon_light_blue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_resetPassword_email"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:ems="20"
            android:inputType="textEmailAddress"
            android:textColor="@color/white" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView_resetPassword_Title"
        android:layout_width="270dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:text="@string/reset_password_Title"
        android:textColor="@color/light_blue"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView_resetPassword_subTitle"
        android:layout_width="278dp"
        android:layout_height="86dp"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:text="@string/reset_password_subTitle"
        android:textColor="@color/light_blue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.646"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_resetPassword_Title" />

    <Button
        android:id="@+id/button_resetPassword_startResetPassword"
        style="@style/Cinemates.Button.Rounded"
        android:layout_width="182dp"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:text="@string/reset_password_button_reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout_resetPassword_email"
        app:layout_constraintVertical_bias="0.054" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="102dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/lock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>