<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue">

    <TextView
        android:id="@+id/textView_contentWatchlistPost_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ha aggiunto un film alla Watchlist." />

    <include
        android:id="@+id/include_conentWatchlistPost_thumbnail_1"
        layout="@layout/movie_thumbnail"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_contentWatchlistPost_description"
        app:layout_constraintStart_toStartOf="@+id/textView_contentWatchlistPost_description"
        app:layout_constraintTop_toBottomOf="@+id/textView_contentWatchlistPost_description" />

    <include
        android:id="@+id/include_contentWatchlistPost_thumbnail_2"
        layout="@layout/movie_thumbnail"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/include_contentWatchlistPost_thumbnail_3"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toEndOf="@+id/include_conentWatchlistPost_thumbnail_1"
        app:layout_constraintTop_toBottomOf="@+id/textView_contentWatchlistPost_description" />

    <include
        android:id="@+id/include_contentWatchlistPost_thumbnail_3"
        layout="@layout/movie_thumbnail"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/textView_contentWatchlistPost_description"
        app:layout_constraintTop_toBottomOf="@+id/textView_contentWatchlistPost_description" />

</androidx.constraintlayout.widget.ConstraintLayout>