<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="mirror42.dev.cinemates.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/main_fragment"
        android:name="mirror42.dev.cinemates.MainFragment"
        android:label="Main Fragment"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_main_fragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_main_fragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/search_fragment"
        android:name="mirror42.dev.cinemates.ui.search.SearchFragment"
        android:label="Cerca"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/movieDetails_fragment"
        android:name="mirror42.dev.cinemates.ui.moviedetails.MovieDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_movie_details" >
        <argument
            android:name="Movie"
            app:argType="mirror42.dev.cinemates.tmdbAPI.model.Movie" />
    </fragment>
    <fragment
        android:id="@+id/latestReleasesFragment"
        android:name="mirror42.dev.cinemates.ui.explore.latest.LatestReleasesFragment"
        android:label="LatestReleasesFragment" />
    <fragment
        android:id="@+id/popularFragment"
        android:name="mirror42.dev.cinemates.ui.explore.popular.PopularFragment"
        android:label="PopularFragment" />
    <fragment
        android:id="@+id/upcomginsFragment"
        android:name="mirror42.dev.cinemates.ui.explore.upcomings.UpcomginsFragment"
        android:label="UpcomginsFragment" />
    <fragment
        android:id="@+id/exploreFragment"
        android:name="mirror42.dev.cinemates.ui.explore.ExploreFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_explore" />
    <action
        android:id="@+id/anywhere_to_movieDetails_fragment"
        app:destination="@id/movieDetails_fragment"
        app:enterAnim="@anim/fragment_open_enter"
        app:exitAnim="@anim/fragment_close_exit"
        app:popEnterAnim="@anim/fragment_open_enter"
        app:popExitAnim="@anim/fragment_close_exit" />
    <activity
        android:id="@+id/mainActivity"
        android:name="mirror42.dev.cinemates.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="mirror42.dev.cinemates.ui.userprofile.UserProfileFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" >
        <action
            android:id="@+id/action_userProfileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_userProfileFragment_to_main_fragment"
            app:destination="@id/main_fragment"
            app:popUpTo="@id/main_fragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="mirror42.dev.cinemates.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>
</navigation>