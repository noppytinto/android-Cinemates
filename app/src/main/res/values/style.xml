<?xml version="1.0" encoding="utf-8"?>
<resources>






    <!--BOTTOM SHEET STYLE-->

    <style name="bottom_sheet_dialog_theme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>





    <!--VIEW ALL BUTTON STYLE-->

    <!--theming of outlined button begins here-->
    <!--parent name is to be give carefully-->
    <style name="outline_button_style" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!--these all styles are implemented outside, because to get all the overridden attributes easily-->
        <item name="shapeAppearance">@style/customOutlinedButtonTheme</item>
        <item name="android:textAppearance">@style/myCustomTextForMaterialButtons</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/yellow</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <!--overriding cornerSize and cornerFamily of the outlined button-->
    <style name="customOutlinedButtonTheme">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <!--theming of outlined button ends here-->

    <!--Font family and size of all the buttons in the entire application should be same-->
    <!--so this child is common for all the material buttons in entire application-->
    <style name="myCustomTextForMaterialButtons">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
    </style>



    <!-- CIRCULAR IMAGEVIEW STYLE-->

    <style name="circular_imageview_style" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="shapeAppearance"> ?attr/shapeAppearanceSmallComponent </item>
        <item name="shapeAppearanceOverlay">@style/circular_shape</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/light_blue</item>
        <item name="android:padding">3dp</item>
    </style>




    <!-- FILTERS TOGGLE BUTTON STYLE -->
    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/filter_toggle_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
    <style name="filterToggleStyle"  parent="Theme.AppCompat.Light">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
    </style>














    <!-- CINEMATES TEXT BUTTON -->
    <style name="Cinemates.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textAppearance">@style/Cinemates.Button.Rectangular.TextAppearance</item>
        <item name="rippleColor">?colorSecondaryVariant</item>
        <item name="elevation">@dimen/default_elevation</item>
        <item name="iconTint">@color/yellow</item>
    </style>


    <!-- CINEMATES BUTTON RECTANGULAR -->
    <style name="Cinemates.Button.Rectangular" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/Cinemates.Button.Rectangular.TextAppearance</item>
        <item name="backgroundTint">?colorSecondary</item>
        <item name="rippleColor">?colorSecondaryVariant</item>
    </style>
    <style name="Cinemates.Button.Rectangular.TextAppearance" parent="TextAppearance.MdcTypographyStyles.Button">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- CINEMATES BUTTON RECTANGULAR OUTLINED-->
    <style name="Cinemates.Button.Rectangular.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/yellow</item>
        <item name="strokeWidth">@dimen/outlined_button_stroke_width</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textAppearance">@style/Cinemates.Button.Outlined.Rectangular.TextAppearance</item>
        <item name="rippleColor">?colorSecondaryVariant</item>
    </style>
    <style name="Cinemates.Button.Outlined.Rectangular.TextAppearance" parent="TextAppearance.MdcTypographyStyles.Button">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/poppins</item>
    </style>


    <!-- CINEMATES OUTLINED BUTTON RECTANGULAR SEMIBOLD-->
    <style name="Cinemates.Button.Rectangular.Outlined.Semibold" parent="Cinemates.Button.Rectangular.Outlined">
        <item name="android:textAppearance">@style/Cinemates.Button.Outlined.Rectangular.TextAppearance</item>
    </style>
    <style name="Cinemates.Button.Outlined.Rectangular.TextAppearance.Semibold" parent="Cinemates.Button.Outlined.Rectangular.TextAppearance">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <!-- CINEMATES BUTTON ROUNDED -->
    <style name="Cinemates.Button.Rounded" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/Cinemates.Button.Rounded.TextAppearance</item>
        <item name="shapeAppearance">@style/cinemates_shape_rounded</item>
        <item name="backgroundTint">?colorSecondary</item>
        <item name="rippleColor">?colorSecondaryVariant</item>
    </style>
    <style name="Cinemates.Button.Rounded.TextAppearance" parent="TextAppearance.MdcTypographyStyles.Button">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- CINEMATES BUTTON ROUNDED OUTLINED -->
    <style name="Cinemates.Button.Rounded.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/yellow</item>
        <item name="strokeWidth">@dimen/outlined_button_stroke_width</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textAppearance">@style/Cinemates.Button.Rounded.Outlined.TextAppearance</item>
        <item name="shapeAppearance">@style/cinemates_shape_rounded</item>
        <item name="rippleColor">?colorSecondaryVariant</item>
    </style>
    <style name="Cinemates.Button.Rounded.Outlined.TextAppearance" parent="TextAppearance.MdcTypographyStyles.Button">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/rounded_outlined_button_text_size</item>
    </style>
    <style name="cinemates_shape_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/rounded_button_corner_size</item>
    </style>


    <!-- CINEMATES FLOATING BUTTON -->
    <style name="Cinemates.Button.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="rippleColor">?colorSecondaryVariant</item>
    </style>


    <!-- CINEMATES SWITCH BUTTON -->
    <style name="Cinemates.Button.SwitchButton" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textAppearance">@style/Cinemates.Button.SwitchButton.TextAppearance</item>
    </style>
    <style name="Cinemates.Button.SwitchButton.TextAppearance" parent="TextAppearance.MdcTypographyStyles.Button">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/siwtch_label</item>
    </style>




