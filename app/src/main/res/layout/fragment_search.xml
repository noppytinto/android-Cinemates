<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_searchFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_blue"
    android:paddingBottom="5dp"
    tools:context=".ui.search.SearchFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_searchFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:paddingBottom="65dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/editText_searchFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_searchFragment"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:autofillHints=""
        android:background="@drawable/shape_search_box"
        android:fontFamily="@font/poppins_semibold"
        android:hint="@string/searc_with_ellipsis"
        android:inputType="text"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:textColor="@color/dark_blue"
        android:textColorHint="@color/light_blue_2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_search_searchFragment"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91" />

    <Button
        android:id="@+id/button_search_searchFragment"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/yellow"
        android:paddingEnd="5dp"
        app:cornerRadius="50dp"
        app:icon="@drawable/search_icon_black"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/editText_searchFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editText_searchFragment" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup_searchFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toEndOf="@+id/textView_chipGroup_label_searchFragment"
        app:layout_constraintTop_toBottomOf="@+id/editText_searchFragment"
        app:singleSelection="true"
        app:singleLine="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_movie_searchFragment"
            style="@style/Cinemates.Button.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="film" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_actor_searchFragment"
            style="@style/Cinemates.Button.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="attore" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_director_searchFragment"
            style="@style/Cinemates.Button.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="regista" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_user_searchFragment"
            style="@style/Cinemates.Button.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="utente" />


    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/textView_chipGroup_label_searchFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="filtra per:"
        android:textColor="@color/light_blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/editText_searchFragment"
        app:layout_constraintTop_toBottomOf="@+id/editText_searchFragment" />


</androidx.constraintlayout.widget.ConstraintLayout>