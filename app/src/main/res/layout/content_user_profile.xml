<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragment_personalProfileFragment_watchlist"
        android:name="mirror42.dev.cinemates.ui.list.WatchistCoverFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView_userProfileFragment_watchlist"
        app:layout_constraintTop_toBottomOf="@+id/textView_userProfileFragment_watchlist" />

    <fragment
        android:id="@+id/fragment_personalProfileFragment_favouritesList"
        android:name="mirror42.dev.cinemates.ui.list.FavouritesCoverFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/textView_userProfileFragment_watchlist"
        app:layout_constraintTop_toBottomOf="@+id/fragment_personalProfileFragment_watchlist" />

    <fragment
        android:id="@+id/fragment_personalProfileFragment_watchedlist"
        android:name="mirror42.dev.cinemates.ui.list.WatchedCoverFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/textView_userProfileFragment_watchlist"
        app:layout_constraintTop_toBottomOf="@+id/fragment_personalProfileFragment_watchlist" />

    <TextView
        android:id="@+id/textView_userProfileFragment_watchlist"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Liste"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>